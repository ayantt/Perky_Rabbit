<Window x:Class="LibraryWPF.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryWPF"
        mc:Ignorable="d"
        Title="Login" Height="397" Width="360">
    <StackPanel>
        <Label Content="Library Login" HorizontalAlignment="Center" FontSize="35" Margin="20"/>
        <TextBox Margin="10" FontSize="18" Name="txtUserName"/>
        <PasswordBox Margin="10" FontSize="18" Name="txtPass"/>
        <Button Name="btnSubmit" Click="btnSubmit_Click" Content="Login" Margin="60 10" FontSize="22"/>
    </StackPanel>
</Window>
